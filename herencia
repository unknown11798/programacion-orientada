package herencia;
public class Persona {
    String nombre;
    String estCivil;
    int id;
    public Persona(String nombre,String estCivil,int id){
        this.nombre=nombre;
        this.estCivil=estCivil;
        this.id=id;
    }
    public void setEstCivil(String estCivil){
        this.estCivil=estCivil;
    }
    public String getNombre() {
        return nombre;
    }
    public String getEstCivil() {
        return estCivil;
    }
    public int getId() {
        return id;
    }
}
public class Estudiante extends Persona{
    String curso;
    public Estudiante(String nombre, String estCivil, int id) {
        super(nombre, estCivil, id);
        this.curso="";
    }
    public String getCurso() {
        return curso;
    }
    public void setCurso(String curso) {
        this.curso = curso;
    }
    public void mostrarEstudiante(){
        System.out.println(this.nombre+"\n"+this.id+"\n"+this.estCivil+"\n Curso:"+this.curso);
    }
}
public class Empleado extends Persona{
    int despacho;
    public Empleado(String nombre, String estCivil, int id) {
        super(nombre, estCivil, id);
        despacho=0;
    }
    public int getDespacho() {
        return despacho;
    }
    public void setDespacho(int despacho) {
        this.despacho = despacho;
    }
    public void mostrarEmpleado(){
        System.out.println(this.nombre+"\n"+this.id+"\n"+this.estCivil+"\n Despacho #:"+this.despacho);
    }
}
public class Docente extends Persona{
    String departamento;
    public Docente(String nombre, String estCivil, int id) {
        super(nombre, estCivil, id);
        this.departamento="";
    }
    public String getDepartamento() {
        return departamento;
    }
    public void setDepartamento(String departamento) {
        this.departamento = departamento;
    }
    public void mostrarEmpleado(){
        System.out.println(this.nombre+"\n"+this.id+"\n"+this.estCivil+"\n Departamento:"+this.departamento);
    }
}
