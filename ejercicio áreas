package figura;
import java.util.Scanner;
public class Figura {
    static double base1,base2,altura,radio,pi=3.141592654,resultado;
    static int opc;
    static Scanner leer=new Scanner(System.in);
    public static void rectangulo(){
        System.out.println("Ingrese valor para la base:");
        base1=leer.nextDouble();
        System.out.println("Ingrese valor para la altura:");
        altura=leer.nextDouble();
        resultado=base1*altura;
        System.out.println("El resultado de la operación es: "+resultado);
    }
    public static void triangulo(){
        System.out.println("Ingrese valor para la base:");
        base1=leer.nextDouble();
        System.out.println("Ingrese valor para la altura:");
        altura=leer.nextDouble();
        resultado=(base1*altura)/2;
        System.out.println("El resultado de la operación es: "+resultado);
    }
    public static void circulo(){
        System.out.println("Ingrese valor para el radio:");
        radio=leer.nextDouble();
        resultado=pi*(radio*radio);
        System.out.println("El resultado de la operación es: "+resultado);
    }
    public static void trapecio(){
        System.out.println("Ingrese valor para la base mayor:");
        base1=leer.nextDouble();
        System.out.println("Ingrese valor para la base menor:");
        base2=leer.nextDouble();
        System.out.println("Ingrese valor para la altura:");
        altura=leer.nextDouble();
        resultado=((base1+base2)*altura)/2;
        System.out.println("El resultado de la operación es: "+resultado);
    }
    public static void main(String[] args) {
        System.out.println("Bienvenido\n1.Calcular área de un Círculo\n2."
        + "Calcular área de un Rectángulo\n3.Calcular área de un Triángulo\n4."
        + "Calcular área de un Trapecio\n0.Salir");
        do{
            System.out.println("Ingrese una opción:");
            opc=leer.nextInt();
            switch(opc){
                case 1:
                    circulo();
                    break;
                case 2:
                    rectangulo();
                    break;
                case 3:
                    triangulo();
                    break;
                case 4:
                    trapecio();
                    break;
            }
        }while(opc!=0);
    }   //Nota: Crear el Constructor y reducir!!! 
}
